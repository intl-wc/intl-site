{
  "hosting": {
    "public": "www",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "demo/**",
        "destination": false
      },
      {
        "source": "**/*.@(json)",
        "destination": false
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
